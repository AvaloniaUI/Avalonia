<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:avalonia="clr-namespace:Avalonia.Maui.Controls;assembly=Avalonia.Maui"
             xmlns:catalog="clr-namespace:ControlCatalog;assembly=ControlCatalog"
             xmlns:ava="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
             x:Class="MauiSample.MainPage">
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    <avalonia:AvaloniaView Grid.Row="0"  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
      <avalonia:AvaloniaView.Content>
        <ava:Label x:Name="La" Content="{Binding Label}"/>
      </avalonia:AvaloniaView.Content>
    </avalonia:AvaloniaView>
        <HorizontalStackLayout HeightRequest="100" Grid.Row="1" Spacing="20" HorizontalOptions="FillAndExpand">
            <Button Text="{Binding Label}" VerticalOptions="Center"/>
            <Label Text="Hey There" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </Grid>

</ContentPage>

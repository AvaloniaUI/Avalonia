<UserControl xmlns="https://github.com/avaloniaui">
  <ScrollViewer>
    <StackPanel Gap="2">
      <TextBlock Text="ThemeBackgroundBrush"/>
      <Border Background="{DynamicResource ThemeBackgroundBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeBorderLightBrush"/>
      <Border Background="{DynamicResource ThemeBorderLightBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeBorderMidBrush"/>
      <Border Background="{DynamicResource ThemeBorderMidBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeBorderDarkBrush"/>
      <Border Background="{DynamicResource ThemeBorderDarkBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeControlLightBrush"/>
      <Border Background="{DynamicResource ThemeControlLightBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeControlMidBrush"/>
      <Border Background="{DynamicResource ThemeControlMidBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeControlDarkBrush"/>
      <Border Background="{DynamicResource ThemeControlDarkBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeForegroundBrush"/>
      <Border Background="{DynamicResource ThemeForegroundBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeForegroundLightBrush"/>
      <Border Background="{DynamicResource ThemeForegroundLightBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="HighlightBrush"/>
      <Border Background="{DynamicResource HighlightBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeAccentBrush"/>
      <Border Background="{DynamicResource ThemeAccentBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeAccentBrush2"/>
      <Border Background="{DynamicResource ThemeAccentBrush2}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeAccentBrush3"/>
      <Border Background="{DynamicResource ThemeAccentBrush3}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeAccentBrush4"/>
      <Border Background="{DynamicResource ThemeAccentBrush4}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ErrorBrush"/>
      <Border Background="{DynamicResource ErrorBrush}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ErrorBrushLight"/>
      <Border Background="{DynamicResource ErrorBrushLight}" BorderBrush="Black" BorderThickness="1" Height="20"/>
      <TextBlock Text="ThemeBorderThickness"/>
      <TextBox Text="{DynamicResource ThemeBorderThickness}" IsReadOnly="True"/>
      <TextBlock Text="ThemeDisabledOpacity"/>
      <TextBox Text="{DynamicResource ThemeDisabledOpacity}" IsReadOnly="True"/>
      <TextBlock Text="FontSizeSmall"/>
      <TextBox Text="{DynamicResource FontSizeSmall}" IsReadOnly="True"/>
      <TextBlock Text="FontSizeNormal"/>
      <TextBox Text="{DynamicResource FontSizeNormal}" IsReadOnly="True"/>
      <TextBlock Text="FontSizeLarge"/>
      <TextBox Text="{DynamicResource FontSizeLarge}" IsReadOnly="True"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>
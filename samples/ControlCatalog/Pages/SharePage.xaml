<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="ControlCatalog.Pages.SharePage">
  <StackPanel Orientation="Vertical" Spacing="4">
    <TextBlock Classes="h2">Sharing</TextBlock>
    <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto">
      <Button Name="ShareText" Grid.Row="0" Grid.Column="0" Margin="2" HorizontalAlignment="Stretch">Share Text</Button>
      <Button Name="OpenFile"  Grid.Row="1" Grid.Column="0" Margin="2" HorizontalAlignment="Stretch">Select Files</Button>
      <Button Name="ShareFile" Grid.Row="0" Grid.Column="1" Margin="2" HorizontalAlignment="Stretch">Share Selected Files</Button>
      <Button Name="ShareStream" Grid.Row="1" Grid.Column="1" Margin="2" HorizontalAlignment="Stretch">Share File as Stream</Button>
    </Grid>
    <Label>Enter Text to Share</Label>
    <TextBox HorizontalAlignment="Stretch" Name="ShareBox"/>
    <CheckBox Name="SelectMultiple">Select Multiple</CheckBox>
    <Label>Selected Files</Label>
    <Border CornerRadius="5" BorderThickness="1" Padding="5">
      <TextBlock Name="FileText" Height="500" HorizontalAlignment="Stretch">

      </TextBlock>
    </Border>
  </StackPanel>
</UserControl>

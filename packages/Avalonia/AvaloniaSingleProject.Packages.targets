<Project>
  <!-- Note, since Avalonia doesn't have SDK nor Workload yet, we can't include PackageReference from NuGet targets file. -->
  <!-- Consumer needs to do it either on their side or manually include this file. -->
  <ItemGroup Condition=" '$(AvaloniaSingleProject)' == 'true' ">
    <PackageReference Include="Avalonia.Skia" Version="$(AvaloniaMainPackageVersion)" VersionOverride="$(AvaloniaMainPackageVersion)" Condition="'$(AvaloniaSingleProjectIncludeSkia)' == 'true'" />
    <PackageReference Include="Avalonia.Win32" Version="$(AvaloniaMainPackageVersion)" VersionOverride="$(AvaloniaMainPackageVersion)" Condition="'$(_AvaloniaWindowsTarget)' == 'true' AND '$(_AvaloniaDesktopTarget)' != 'true'"/>
    <PackageReference Include="Avalonia.Native" Version="$(AvaloniaMainPackageVersion)" VersionOverride="$(AvaloniaMainPackageVersion)" Condition="'$(_AvaloniaMacOSTarget)' == 'true' AND '$(_AvaloniaDesktopTarget)' != 'true'"/>
    <PackageReference Include="Avalonia.X11" Version="$(AvaloniaMainPackageVersion)" VersionOverride="$(AvaloniaMainPackageVersion)" Condition="'$(_AvaloniaLinuxTarget)' == 'true' AND '$(_AvaloniaDesktopTarget)' != 'true'"/>
    <PackageReference Include="Avalonia.Android" Version="$(AvaloniaMainPackageVersion)" VersionOverride="$(AvaloniaMainPackageVersion)" Condition="'$(_AvaloniaAndroidTarget)' == 'true'"/>
    <PackageReference Include="Avalonia.iOS" Version="$(AvaloniaMainPackageVersion)" VersionOverride="$(AvaloniaMainPackageVersion)" Condition="'$(_AvaloniaIOSTarget)' == 'true' OR '$(_AvaloniaTvOSTarget)' == 'true'"/>
    <PackageReference Include="Avalonia.Browser" Version="$(AvaloniaMainPackageVersion)" VersionOverride="$(AvaloniaMainPackageVersion)" Condition="'$(_AvaloniaBrowserTarget)' == 'true'"/>
    <PackageReference Include="Avalonia.Tizen" Version="$(AvaloniaMainPackageVersion)" VersionOverride="$(AvaloniaMainPackageVersion)" Condition="'$(_AvaloniaTizenTarget)' == 'true'"/>
    <PackageReference Include="Avalonia.Desktop" Version="$(AvaloniaMainPackageVersion)" VersionOverride="$(AvaloniaMainPackageVersion)" Condition="'$(_AvaloniaDesktopTarget)' == 'true'"/>
  </ItemGroup>
</Project>
